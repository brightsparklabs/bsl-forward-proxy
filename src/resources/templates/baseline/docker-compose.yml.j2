services:
  # --------------------------------------------------------------------------
  # INFRASTRUCTURE
  # --------------------------------------------------------------------------

  proxy:
    image: caddy:2.8
    restart: always
    volumes:
      - ${FORWARD_PROXY_GENERATED_CONFIG_DIR:?}/proxy/Caddyfile:/etc/caddy/Caddyfile:ro
      - ${FORWARD_PROXY_DATA_DIR:?}/proxy/:/data/
    ports:
      - 80:80
      - 443:443
    networks:
      proxy_network:
    {% for network in settings.forward_proxy.routing.networks %}
      {{ network.name }}:
        {% if network.aliases %}
        aliases:
        {% for alias in network.aliases %}
        - {{ alias }}
        {% endfor %}
        {% endif %}
    {% endfor %}

networks:
  proxy_network:
    driver: bridge
  {% for network in settings.forward_proxy.routing.networks %}
  {{ network.name }}:
    external: true
  {% endfor %}
